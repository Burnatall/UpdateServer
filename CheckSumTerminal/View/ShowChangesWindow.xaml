<Window x:Class="CheckSumTerminal.View.ShowChangesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckSumTerminal.View"
        mc:Ignorable="d"
        Title="Изменения" Height="450" Width="1300" ResizeMode="NoResize" Icon="/View/Иконка.bmp">
    <Window.Background>
        <ImageBrush ImageSource="/View/splashscreen_GIS.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid Loaded="Grid_Loaded" >
        <DataGrid x:Name="previousDataGrid" CanUserAddRows="False"  Margin="0,0,0,45" HorizontalAlignment="Left" Width="635" IsReadOnly="True" Background="{x:Null}" FontSize="16"/>
        <DataGrid x:Name="CurrentDataGrid" CanUserAddRows="False"  Margin="0,0,0,45" HorizontalAlignment="Right" Width="635" IsReadOnly="True" Background="{x:Null}" FontSize="16"/>
        <ComboBox x:Name="VersionSelector" Margin="0,0,0,10" SelectionChanged="VersionSelector_SelectionChanged" FontSize="20" HorizontalAlignment="Center" Width="140" Height="30" VerticalAlignment="Bottom"/>
        <Label Content="Версия" HorizontalAlignment="Left" Margin="479,0,0,10" FontSize="20" Height="37" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="PreviousTextBlock" HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Text="TextBlock" FontSize="20" Height="27" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="CurrentTextBlock" Margin="0,0,10,-16" TextWrapping="Wrap" Text="TextBlock" FontSize="20" Height="53" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="89" TextAlignment="Right"/>
        <Button x:Name="ShowChangesButton" Content="Описание версии" HorizontalAlignment="Right" Margin="0,0,359,10" Width="192" FontSize="20" Click="ShowChangesButton_Click" Height="30" VerticalAlignment="Bottom" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
