<Window x:Class="CheckSumTerminal.View.VersionSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckSumTerminal.View"
        mc:Ignorable="d"
        Title="Окно версий" Height="450" Width="800" ResizeMode="NoResize" Icon="/View/Иконка.bmp">
    <Window.Background>
        <ImageBrush ImageSource="/View/splashscreen_GIS.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid Loaded="Grid_Loaded">
        <Button x:Name="BackToRevisionButton" Content="Вернуться к версии" HorizontalAlignment="Left" Margin="423,10,0,0" VerticalAlignment="Top" Height="38" Width="230" FontSize="20" Click="BackToRevisionButton_Click" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="ShowChangesButton" Content="Посмотреть изменения" HorizontalAlignment="Left" Margin="423,81,0,0" VerticalAlignment="Top" Height="38" Width="230" FontSize="20" Click="ShowChangesButton_Click" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Отмена" Margin="0,0,126,10" FontSize="20" Height="31" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="91" IsCancel="True" Click="Button_Click" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="OkButton" Content="ОК" Margin="0,0,10,10" FontSize="20" HorizontalAlignment="Right" Width="91" Height="31" VerticalAlignment="Bottom" Click="OkButton_Click" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <DataGrid x:Name="VersionDataGrid"  Margin="0,0,400,0" IsSynchronizedWithCurrentItem="False" FontSize="20" IsReadOnly="True" Background="{x:Null}"/>

    </Grid>
</Window>
