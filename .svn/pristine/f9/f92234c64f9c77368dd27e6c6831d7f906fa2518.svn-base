<Window x:Class="CheckSumTerminal.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:CheckSumTerminal"
        mc:Ignorable="d"
        Title="Обновление" Height="626" Width="1302" FontSize="16" SizeToContent="Width" ResizeMode="NoResize" Icon="/View/Иконка.bmp">
    <Window.Background>
        <ImageBrush ImageSource="/View/splashscreen_GIS.png" Stretch="UniformToFill"/>
    </Window.Background>
    <!--<Window.Resources>
        <local:CellColorConverter x:key="CellColorConverter"/>
    </Window.Resources>-->
    <Grid Loaded="Grid_Loaded" Margin="0,0,0,0">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="650"/>
            <ColumnDefinition Width="650"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="CurrentFilesDataGrid" Margin="10,42,10,72" CanUserAddRows="False" Background="{x:Null}"/>
        <DataGrid x:Name="NewFilesDataGrid" Drop="NewFilesDataGrid_Drop"
                  AllowDrop="True" Margin="10,42,10,72" Grid.Column="1" CanUserAddRows="False" Background="{x:Null}"
                  
        >
            <!--<DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="{Binding Age, Converter={StaticResource AgeToColorConverter}}" />
                </Style>
            </DataGrid.CellStyle>-->
        </DataGrid>
        <TextBlock x:Name="GridTextBlock" Margin="46,290,39,177" TextWrapping="Wrap" Text="Перетащите сюда файлы либо нажмите кнопку выбрать данные" TextAlignment="Center" Drop="NewFilesDataGrid_Drop"
                  AllowDrop="True" Grid.Column="1" LineHeight="36"/>
        <Button x:Name="ButtonOK" Content="OK" Margin="0,0,10,23" HorizontalAlignment="Right" Width="80" Grid.Column="1" Height="31" VerticalAlignment="Bottom" Click="ButtonOK_Click" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonCancel" Content="Отмена" Margin="0,0,108,23" Grid.Column="1" Height="31" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" IsCancel="True" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonData" Content="Выбрать данные" Margin="10,0,0,23" Grid.Column="1" HorizontalAlignment="Left" Width="184" Height="31" VerticalAlignment="Bottom" Click="ButtonData_Click" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock Grid.Column="1" Margin="193,5,185,0" TextWrapping="Wrap" Text="Файлы для обновления" VerticalAlignment="Top" Height="27" TextAlignment="Center"/>
        <TextBlock Margin="228,5,227,0" TextWrapping="Wrap" Text="Текущие файлы" VerticalAlignment="Top" RenderTransformOrigin="0.546,0.064" Height="27" TextAlignment="Center"/>
        <TextBox x:Name="TextBoxBefore" Margin="250,0,250,23" TextWrapping="Wrap" IsReadOnly="True" Height="31" VerticalAlignment="Bottom"/>
        <TextBox x:Name="TextBoxAfter" Margin="254,0,246,23" TextWrapping="Wrap" Grid.Column="1" Height="31" VerticalAlignment="Bottom"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,2" TextWrapping="Wrap" Text="Номер версии" Height="21" VerticalAlignment="Bottom"/>
        <TextBlock Margin="276,0,0,2" TextWrapping="Wrap" Text="Номер версии" Grid.Column="1" Height="21" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="109"/>
        <Button x:Name="ButtonDelete" Content="Удалить выбранные" Margin="32,0,0,23" HorizontalAlignment="Left" Width="184" Height="31" VerticalAlignment="Bottom" Click="ButtonDelete_Click"  Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonDeleteClean" Content="Убрать удаляемые" Margin="433,0,0,23" HorizontalAlignment="Left" Width="184" Height="31" VerticalAlignment="Bottom" Click="ButtonDeleteClean_Click"  Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
