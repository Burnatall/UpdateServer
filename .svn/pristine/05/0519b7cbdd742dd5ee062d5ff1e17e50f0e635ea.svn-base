<Window x:Class="CheckSumTerminal.View.CreateDescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cm="clr-namespace:System.ComponentModel;assembly=System"
        xmlns:local="clr-namespace:CheckSumTerminal.View"
        mc:Ignorable="d"
        Title="Описание обнолвления" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/View/Иконка.bmp">
    <Window.Resources>
        <cm:BackgroundWorker x:Key="backgroundWorker" WorkerReportsProgress="True" RunWorkerCompleted="BackgroundWorker_RunWorkerCompleted"  DoWork="BackgroundWorker_DoWork" ProgressChanged="BackgroundWorker_ProgressChanged"></cm:BackgroundWorker>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="/View/splashscreen_GIS.png"/>
    </Window.Background>
    <Grid>
        <RichTextBox x:Name="MainTextBox" Margin="0,0,0,88" FontSize="20" Background="White">
            <FlowDocument>
                <Paragraph>
                    <Run Text="" FontSize="20"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="ButtonOk" Content="OK" Margin="0,0,19,5" HorizontalAlignment="Right" Width="96" Height="40" VerticalAlignment="Bottom" Click="Button_Click" FontSize="20"/>
        <Button x:Name="ButtonCancel" Content="Отмена" Margin="0,0,140,5" IsCancel="True" HorizontalAlignment="Right" Width="96" Height="40" VerticalAlignment="Bottom" FontSize="20"/>
        <ProgressBar x:Name="ProgressBarMain" Margin="10,0,0,5" HorizontalAlignment="Left" Width="493" Height="40" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="WhatHappendTextBlock" HorizontalAlignment="Left" Margin="10,0,0,51" TextWrapping="Wrap" Width="390" FontSize="20" Height="32" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
