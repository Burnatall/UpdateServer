<Window GotFocus="Grid_Loaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:CheckSumTerminal"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" x:Class="CheckSumTerminal.MainWindow"
        mc:Ignorable="d"
        Title="Терминал" Height="450" Width="800" ResizeMode="NoResize" Icon="/View/Иконка.bmp">
    <Window.Background>
        <ImageBrush ImageSource="/View/splashscreen_GIS.png"/>
    </Window.Background>
    <Grid Loaded="Grid_Loaded" Margin="0,2,0,0">
        <Grid.Background>
            <ImageBrush Stretch="Fill"/>
        </Grid.Background>

        <Button x:Name="ButtonAdd" Content="Создать версию" Margin="20,20,0,0" Click="ButtonAdd_Click" FontSize="18" FontFamily="Cascadia Code SemiBold" FontWeight="Bold" Foreground="White" Grid.RowSpan="1" Grid.ColumnSpan="1" HorizontalAlignment="Left" Width="234" Height="34" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ComboBox x:Name="DirectoryName" Margin="0,147,36,0" VerticalAlignment="Top" IsEditable="True" IsSynchronizedWithCurrentItem="True" SelectedIndex="0" FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black" HorizontalAlignment="Right" Width="188" IsReadOnly="True">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <System:String>MainClient</System:String>
        </ComboBox>
        <Label Content="Папка с эталоном" VerticalAlignment="Top" FontSize="18" FontFamily="Cascadia Code SemiBold" Background="{x:Null}" Height="30" Foreground="Black" Margin="0,145,290,0" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="188"/>
        <Button x:Name="ButtonVersion" Content="Версии" Margin="20,83,0,0" FontSize="18" FontFamily="Cascadia Code SemiBold" FontWeight="Bold" Foreground="White" Grid.RowSpan="1" Grid.ColumnSpan="1" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="234" Click="ButtonVersion_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF76B330"/>
                    <GradientStop Color="#FF8EC6DE" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonUpdate" Content="Обновление" Margin="0,345,0,0" FontFamily="Bahnschrift SemiBold" FontSize="24" FontWeight="Bold" Click="ButtonUpdate_Click" RenderTransformOrigin="0.535,1.556" Foreground="White" Height="45" VerticalAlignment="Top" HorizontalAlignment="Center" Width="268">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF43AD34" Offset="0.799"/>
                    <GradientStop Color="#FE6CECE3" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Папка с версиями" VerticalAlignment="Top" FontSize="18" FontFamily="Cascadia Code SemiBold" Background="{x:Null}" Height="30" Foreground="Black" Margin="0,83,290,0" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="188"/>
        <ComboBox x:Name="VersionsFolderName" Margin="0,87,36,0" VerticalAlignment="Top" IsEditable="True" IsSynchronizedWithCurrentItem="True" SelectedIndex="0" FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black" HorizontalAlignment="Right" Width="188" IsReadOnly="True">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="#FF9F2297" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <System:String>VersionsF</System:String>
        </ComboBox>
        <Label Content="Номер текущей версии" VerticalAlignment="Top" FontSize="18" FontFamily="Cascadia Code SemiBold" Background="{x:Null}" Height="30" Foreground="Black" Margin="0,22,249,0" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="232"/>
        <TextBox x:Name="NewVersionTextBox" Margin="0,19,36,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" FontSize="20" IsReadOnly="True" HorizontalAlignment="Right" Width="188"/>

    </Grid>
</Window>
